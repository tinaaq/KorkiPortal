datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"

}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role
  tutorProfile   TutorProfile?
  studentProfile StudentProfile?
  createdAt DateTime @default(now())
}

model TutorProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])

  firstName   String
  lastName    String
  city        String?
  address     String?
  mode        Mode
  subjects    TutorSubject[]
  
  description String?
  meetingLink String?
  photoUrl  String?

  availabilities Availability[]
  unavailabilities TutorUnavailability[]

  bookings  Booking[]
  notes     Note[]

  flashcardSets FlashcardSet[]
}

model StudentProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])

  firstName String
  lastName  String
  city      String?
  address   String?
  grade     String?
  school    String?

  bookings  Booking[]
  notes     Note[]

  flashcardSetAssignments FlashcardSetAssignment[]
}

model Subject {
  id   Int    @id @default(autoincrement())
  name String @unique

  tutors TutorSubject[]
}

model TutorSubject {
  tutorId   Int
  subjectId Int

  priceInfo String

  tutor   TutorProfile @relation(fields: [tutorId], references: [id])
  subject Subject      @relation(fields: [subjectId], references: [id])

  @@id([tutorId, subjectId])
}


model Availability {
  id        Int    @id @default(autoincrement())
  tutorId   Int
  dayOfWeek Int    // 0 = Sunday ... 6 = Saturday
  startTime String // "16:00"
  endTime   String // "20:00"

  tutor TutorProfile @relation(fields: [tutorId], references: [id])

  @@unique([tutorId, dayOfWeek, startTime, endTime])
  
  @@index([tutorId, dayOfWeek])
}

model TutorUnavailability {
  id      Int @id @default(autoincrement())
  tutorId Int

  startAt DateTime
  endAt   DateTime
  reason  String?

  tutor TutorProfile @relation(fields: [tutorId], references: [id])

  @@index([tutorId, startAt])
}


model Booking {
  id        Int @id @default(autoincrement())
  tutorId   Int
  studentId Int
  subjectId Int

  mode      Mode
  location  LessonLocation?
  address   String?

  startAt DateTime
  endAt   DateTime

  status BookingStatus @default(PENDING)

  tutor   TutorProfile   @relation(fields: [tutorId], references: [id])
  student StudentProfile @relation(fields: [studentId], references: [id])

  @@index([tutorId, startAt])
  @@index([studentId, startAt])
}


model Note {
  id        Int      @id @default(autoincrement())
  tutorId   Int
  studentId Int
  content   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tutor   TutorProfile   @relation(fields: [tutorId], references: [id])
  student StudentProfile @relation(fields: [studentId], references: [id])

  @@index([tutorId, studentId])
}

model FlashcardSet {
  id        Int      @id @default(autoincrement())
  tutorId   Int
  name      String

  createdAt DateTime @default(now())

  tutor      TutorProfile @relation(fields: [tutorId], references: [id])
  flashcards Flashcard[]
  assignments FlashcardSetAssignment[]
}

model Flashcard {
  id        Int      @id @default(autoincrement())
  setId     Int
  front     String
  back      String

  createdAt DateTime @default(now())

  set   FlashcardSet @relation(fields: [setId], references: [id])

  @@index([setId])
}

model FlashcardSetAssignment {
  setId     Int
  studentId Int

  set     FlashcardSet   @relation(fields: [setId], references: [id])
  student StudentProfile @relation(fields: [studentId], references: [id])

  @@id([setId, studentId])
}


enum Role {
  TUTOR
  STUDENT
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}


enum Mode {
  ONLINE
  OFFLINE
  BOTH
}

enum LessonLocation {
  AT_STUDENT
  AT_TUTOR
}
