datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"

}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role
  tutorProfile   TutorProfile?
  studentProfile StudentProfile?
  createdAt DateTime @default(now())
}

model TutorProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  name      String
  subjects  String[]
  description String?
  meetingLink String?
  photoUrl  String? // zdjÄ™cie korepetytora
  availabilities Availability[]
  bookings  Booking[]
  notes     Note[]
  flashcards Flashcard[]
}

model StudentProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  name      String
  grade     String?
  bookings  Booking[]
  notes     Note[]
  flashcardAssignments FlashcardAssignment[]
}

model Availability {
  id        Int    @id @default(autoincrement())
  tutorId   Int
  dayOfWeek Int    // 0 = Sunday ... 6 = Saturday
  startTime String // "16:00"
  endTime   String // "20:00"

  tutor TutorProfile @relation(fields: [tutorId], references: [id])

  @@unique([tutorId, dayOfWeek, startTime, endTime])
}


model Booking {
  id        Int      @id @default(autoincrement())
  tutorId   Int
  studentId Int

  startAt   DateTime
  endAt     DateTime
  status    BookingStatus @default(PENDING)

  tutor     TutorProfile   @relation(fields: [tutorId], references: [id])
  student   StudentProfile @relation(fields: [studentId], references: [id])

  @@index([tutorId, startAt])
}


model Note {
  id        Int      @id @default(autoincrement())
  tutorId   Int
  studentId Int
  tutor     TutorProfile @relation(fields: [tutorId], references: [id])
  student   StudentProfile @relation(fields: [studentId], references: [id])
  content   String
  updatedAt DateTime @updatedAt
}

model Flashcard {
  id        Int      @id @default(autoincrement())
  tutorId   Int
  tutor     TutorProfile @relation(fields: [tutorId], references: [id])
  question  String
  answer    String
  updatedAt DateTime @updatedAt
  assignments FlashcardAssignment[]
}

model FlashcardAssignment {
  id          Int      @id @default(autoincrement())
  flashcardId Int
  studentId   Int
  flashcard   Flashcard @relation(fields: [flashcardId], references: [id])
  student     StudentProfile @relation(fields: [studentId], references: [id])
}

enum Role {
  TUTOR
  STUDENT
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
